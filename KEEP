import React, { useState, useEffect, useRef } from 'react';
import { initializeApp } from 'firebase/app';
import { 
  getAuth, 
  signInAnonymously, 
  onAuthStateChanged 
} from 'firebase/auth';
import { 
  getFirestore, 
  collection, 
  doc, 
  setDoc, 
  addDoc, 
  onSnapshot, 
  deleteDoc, 
  writeBatch, 
  updateDoc 
} from 'firebase/firestore';
import { 
  Plus, Trash2, CheckCircle2, ChevronRight, 
  FolderKanban, UserPlus, X, 
  Camera, AlertCircle, Loader2, ChevronDown, ChevronUp,
  Settings2 // 已修正：加入漏掉的 Settings2 匯入
} from 'lucide-react';

// --- 重要提示 ---
// 請前往 Firebase Console (https://console.firebase.google.com/) 
// 建立專案並獲取你的 Web App 配置，然後替換下方的內容。
const firebaseConfig = {
  apiKey: "AIzaSyCf3gdvdTMm5BFXjho7_xdQjE0eH4JSAzM", // <--- 這裡必填，否則會報 auth/api-key-not-valid
  authDomain: "keep-40f68.firebaseapp.com",
  projectId: "keep-40f68",
  storageBucket: "keep-40f68.firebasestorage.app",
  messagingSenderId: "419621970498",
  appId: "1:419621970498:web:9370a95618f4f8170103db"
};

// 檢查 API Key 是否已填寫
const isFirebaseConfigured = firebaseConfig.apiKey !== "" && firebaseConfig.apiKey !== "YOUR_API_KEY";

let app, auth, db;
if (isFirebaseConfigured) {
  try {
    app = initializeApp(firebaseConfig);
    auth = getAuth(app);
    db = getFirestore(app);
  } catch (err) {
    console.error("Firebase 初始化失敗:", err);
  }
}

const appId = "expense-splitter-app";

const colorPalettes = [
  { name: '鼠尾草綠', primary: '#8E9775', secondary: '#E28E8E' },
  { name: '乾燥玫瑰', primary: '#B27070', secondary: '#7D9D9C' },
  { name: '迷霧藍', primary: '#7D9D9C', secondary: '#B2967D' },
  { name: '奶油黃', primary: '#C2B490', secondary: '#8E9775' },
  { name: '暗礦灰', primary: '#576F72', secondary: '#8E9775' }
];

export default function App() {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(true);
  const [books, setBooks] = useState([]);
  const [currentBookId, setCurrentBookId] = useState(null);
  const [isAddingBook, setIsAddingBook] = useState(false);
  const [newBookName, setNewBookName] = useState('');
  const [items, setItems] = useState([]);
  const [settlements, setSettlements] = useState([]);
  const [participants, setParticipants] = useState(['我', '朋友']);
  const [exchangeRate] = useState(0.22); 
  const [currencyName] = useState('JPY');
  const [isForeignMode, setIsForeignMode] = useState(false);
  const [themeColor, setThemeColor] = useState(colorPalettes[0]);
  const [quickInput, setQuickInput] = useState({ name: '', amount: '', currency: 'TWD', payer: '我' });
  const [view, setView] = useState('active'); 
  const [isSettling, setIsSettling] = useState(false);
  const [errorMessage, setErrorMessage] = useState('');
  const [isParticipantsExpanded, setIsParticipantsExpanded] = useState(true);
  const [showReceipt, setShowReceipt] = useState(false);
  const [lastSettlementData, setLastSettlementData] = useState(null);
  const receiptRef = useRef(null);

  // 1. 初始化驗證
  useEffect(() => {
    if (!isFirebaseConfigured) {
      setLoading(false);
      return;
    }

    const unsubscribe = onAuthStateChanged(auth, async (u) => {
      try {
        if (!u) {
          await signInAnonymously(auth);
        } else {
          setUser(u);
          setLoading(false);
        }
      } catch (err) {
        console.error(err);
        setErrorMessage("Firebase 驗證失敗，請檢查配置是否正確。");
        setLoading(false);
      }
    });
    return () => unsubscribe();
  }, []);

  // 2. 監聽帳本列表
  useEffect(() => {
    if (!user || !db) return;
    const q = collection(db, 'projects', appId, 'users', user.uid, 'books');
    return onSnapshot(q, (snapshot) => {
      const booksData = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      setBooks(booksData);
      if (!currentBookId && booksData.length > 0) setCurrentBookId(booksData[0].id);
    }, (err) => {
      setErrorMessage("讀取帳本列表失敗。");
    });
  }, [user, currentBookId]);

  // 3. 監聽細節
  useEffect(() => {
    if (!user || !currentBookId || !db) return;
    const currentBook = books.find(b => b.id === currentBookId);
    if (currentBook) setParticipants(currentBook.participants || ['我', '朋友']);

    const qExpenses = collection(db, 'projects', appId, 'users', user.uid, 'books', currentBookId, 'expenses');
    const unsubExp = onSnapshot(qExpenses, (snapshot) => {
      const data = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      setItems(data.filter(i => i.status !== 'settled').sort((a, b) => b.timestamp - a.timestamp));
    }, (err) => console.error("監聽支出失敗:", err));

    const qSettlements = collection(db, 'projects', appId, 'users', user.uid, 'books', currentBookId, 'settlements');
    const unsubSet = onSnapshot(qSettlements, (snapshot) => {
      const data = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      setSettlements(data.sort((a, b) => b.settledAt - a.settledAt));
    }, (err) => console.error("監聽結算紀錄失敗:", err));

    return () => { unsubExp(); unsubSet(); };
  }, [user, currentBookId, books]);

  const handleAddBook = async () => {
    if (!newBookName.trim() || !user) return;
    try {
      const docRef = await addDoc(collection(db, 'projects', appId, 'users', user.uid, 'books'), {
        name: newBookName, participants: ['我', '朋友'], createdAt: Date.now()
      });
      setNewBookName('');
      setIsAddingBook(false);
      setCurrentBookId(docRef.id);
      setView('active');
    } catch (e) { setErrorMessage("建立帳本失敗。"); }
  };

  const updateParticipants = async (newParticipants) => {
    if (!user || !currentBookId) return;
    setParticipants(newParticipants);
    try {
      await updateDoc(doc(db, 'projects', appId, 'users', user.uid, 'books', currentBookId), { participants: newParticipants });
    } catch (e) { setErrorMessage("更新成員失敗。"); }
  };

  const handleQuickAdd = async () => {
    if (!quickInput.name || !quickInput.amount) return;
    const amount = parseFloat(quickInput.amount);
    const isForeign = quickInput.currency !== 'TWD';
    const finalAmountInTWD = isForeign ? amount * exchangeRate : amount;
    const newItem = {
      name: quickInput.name, 
      amount: finalAmountInTWD, 
      payer: quickInput.payer, 
      status: 'active', 
      timestamp: Date.now()
    };
    try {
      await addDoc(collection(db, 'projects', appId, 'users', user.uid, 'books', currentBookId, 'expenses'), newItem);
      setQuickInput(prev => ({ ...prev, name: '', amount: '' }));
    } catch (e) { setErrorMessage("新增失敗。"); }
  };

  const calculateBalances = (dataItems = items) => {
    const totalSpent = dataItems.reduce((sum, i) => sum + i.amount, 0);
    const average = totalSpent / (participants.length || 1);
    const balances = {};
    participants.forEach(p => {
      const paid = dataItems.filter(i => i.payer === p).reduce((sum, i) => sum + i.amount, 0);
      balances[p] = paid - average;
    });
    return { totalSpent, average, balances };
  };

  const handleSettlement = async () => {
    if (items.length === 0 || !user || !currentBookId) return;
    setIsSettling(true);
    const stats = calculateBalances();
    const settlementData = { 
      items: [...items], 
      ...stats, 
      settledAt: Date.now(),
      bookName: books.find(b => b.id === currentBookId)?.name || '未命名帳本'
    };
    try {
      await addDoc(collection(db, 'projects', appId, 'users', user.uid, 'books', currentBookId, 'settlements'), settlementData);
      const batch = writeBatch(db);
      items.forEach(item => { 
        batch.update(doc(db, 'projects', appId, 'users', user.uid, 'books', currentBookId, 'expenses', item.id), { status: 'settled' }); 
      });
      await batch.commit();
      setLastSettlementData(settlementData);
      setShowReceipt(true);
    } catch (e) { setErrorMessage("結算錯誤。"); } finally { setIsSettling(false); }
  };

  const saveReceiptAsImage = async () => {
    if (window.html2canvas) {
      const canvas = await window.html2canvas(receiptRef.current);
      const link = document.createElement('a');
      link.download = `結算單_${new Date().getTime()}.png`;
      link.href = canvas.toDataURL();
      link.click();
    } else {
      setErrorMessage("圖片套件尚未載入，請確認 HTML 中有引入 html2canvas 腳本。");
    }
  };

  const { totalSpent, balances } = calculateBalances();

  if (loading) return (
    <div className="flex h-screen flex-col items-center justify-center bg-slate-50 gap-4">
      <Loader2 className="animate-spin text-slate-400" />
      <span className="text-xs font-bold text-slate-400">正在連接雲端資料庫...</span>
    </div>
  );

  return (
    <div className="min-h-screen bg-[#F5F5F5] font-sans text-[#576F72] flex flex-col items-center">
      {/* 警告/錯誤通知 */}
      {errorMessage && (
        <div className="fixed top-4 z-[200] bg-orange-500 text-white px-6 py-4 rounded-2xl shadow-2xl flex items-center gap-3 max-w-sm">
          <AlertCircle size={24} /> 
          <div className="text-sm font-bold">{errorMessage}</div>
          <button onClick={() => setErrorMessage('')}><X size={18} /></button>
        </div>
      )}

      {/* 收據彈窗 */}
      {showReceipt && lastSettlementData && (
        <div className="fixed inset-0 z-[100] bg-black/60 backdrop-blur-sm flex items-center justify-center p-4">
          <div className="w-full max-w-sm">
            <div ref={receiptRef} className="bg-white rounded-3xl p-8 shadow-2xl relative overflow-hidden">
               <div className="mb-6">
                 <h2 className="text-xl font-black text-[#40514E]">{lastSettlementData.bookName}</h2>
                 <p className="text-[10px] text-slate-400 font-bold uppercase tracking-widest">結算明細</p>
               </div>
               <div className="bg-slate-50 p-5 rounded-2xl mb-6 flex justify-between items-end">
                 <span className="text-xs font-bold text-slate-400">總支出</span>
                 <span className="text-2xl font-black text-[#40514E]">${lastSettlementData.totalSpent.toLocaleString()}</span>
               </div>
               <div className="space-y-4">
                 {Object.entries(lastSettlementData.balances).map(([name, bal]) => (
                   <div key={name} className="flex justify-between items-center text-sm">
                     <span className="font-bold">{name}</span>
                     <span className={`font-black ${bal >= 0 ? 'text-green-600' : 'text-red-500'}`}>
                       {bal >= 0 ? '收' : '付'} ${Math.abs(bal).toLocaleString()}
                     </span>
                   </div>
                 ))}
               </div>
            </div>
            <div className="flex gap-3 mt-4">
              <button onClick={saveReceiptAsImage} className="flex-1 bg-white py-4 rounded-2xl font-black text-sm flex items-center justify-center gap-2 shadow-xl">
                <Camera size={18} /> 儲存圖片
              </button>
              <button onClick={() => setShowReceipt(false)} className="bg-white/20 text-white w-14 rounded-2xl flex items-center justify-center">
                <X size={20} />
              </button>
            </div>
          </div>
        </div>
      )}

      {/* 配置檢查介面 */}
      {!isFirebaseConfigured ? (
        <div className="flex-1 flex flex-col items-center justify-center p-6 w-full max-w-md">
          <div className="bg-white p-10 rounded-[2.5rem] shadow-sm border text-center space-y-6 w-full">
            <div className="w-16 h-16 bg-orange-100 text-orange-500 rounded-full flex items-center justify-center mx-auto mb-2">
              <Settings2 size={32} />
            </div>
            <div className="space-y-2">
              <h2 className="text-xl font-black">尚未完成 Firebase 配置</h2>
              <p className="text-sm text-slate-400 leading-relaxed px-4">
                為了保存您的拆帳數據，請先在代碼中填寫您的 <b>Firebase API Key</b>。
              </p>
            </div>
            <div className="bg-slate-50 p-4 rounded-2xl text-[10px] font-mono text-left overflow-x-auto text-slate-500 leading-relaxed">
               1. 前往 Firebase Console<br/>
               2. 獲取專案配置 (apiKey, appId 等)<br/>
               3. 貼到 App.js 第 25 行附近的 firebaseConfig
            </div>
          </div>
        </div>
      ) : (
        <>
          {/* 導覽列 */}
          <header className="w-full bg-white border-b sticky top-0 z-30 px-6 py-4 flex justify-between items-center max-w-5xl">
            <div className="flex items-center gap-2">
              <FolderKanban style={{ color: themeColor.primary }} size={20} />
              <button onClick={() => setView('books')} className="text-sm font-black flex items-center">
                {books.find(b => b.id === currentBookId)?.name || '我的帳本'}
                <ChevronRight size={14} className="ml-1 opacity-40" />
              </button>
            </div>
            <div className="flex bg-slate-100 p-1 rounded-xl">
              <button onClick={() => setView('active')} className={`px-4 py-1.5 text-xs font-bold rounded-lg ${view === 'active' ? 'bg-white shadow-sm' : 'text-slate-400'}`} style={view === 'active' ? { color: themeColor.primary } : {}}>現行</button>
              <button onClick={() => setView('history')} className={`px-4 py-1.5 text-xs font-bold rounded-lg ${view === 'history' ? 'bg-white shadow-sm' : 'text-slate-400'}`} style={view === 'history' ? { color: themeColor.primary } : {}}>歷史</button>
            </div>
          </header>

          <main className="w-full max-w-5xl p-6 md:p-10">
            {view === 'books' ? (
              <div className="space-y-4">
                <div className="flex justify-between items-center">
                  <h2 className="font-black text-lg">我的帳本</h2>
                  <button onClick={() => setIsAddingBook(true)} style={{ backgroundColor: themeColor.primary }} className="text-white p-2 rounded-full shadow-lg"><Plus size={20} /></button>
                </div>
                {isAddingBook && (
                  <div className="bg-white p-6 rounded-3xl shadow-sm border space-y-4">
                    <input placeholder="帳本名稱..." value={newBookName} onChange={(e) => setNewBookName(e.target.value)} className="w-full bg-slate-50 p-4 rounded-2xl text-sm font-bold border-none" />
                    <div className="flex gap-2">
                      <button onClick={handleAddBook} style={{ backgroundColor: themeColor.primary }} className="flex-1 text-white py-3 rounded-2xl text-sm font-bold">建立</button>
                      <button onClick={() => setIsAddingBook(false)} className="flex-1 bg-slate-100 py-3 rounded-2xl text-sm font-bold text-slate-500">取消</button>
                    </div>
                  </div>
                )}
                <div className="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  {books.map(book => (
                    <button key={book.id} onClick={() => { setCurrentBookId(book.id); setView('active'); }} className="bg-white p-6 rounded-3xl text-left border hover:shadow-md transition-all">
                      <span className="font-black block text-lg mb-1">{book.name}</span>
                      <span className="text-[10px] text-slate-400 font-black uppercase tracking-widest">{book.participants?.length || 0} MEMBERS</span>
                    </button>
                  ))}
                </div>
              </div>
            ) : view === 'active' ? (
              <div className="grid md:grid-cols-2 gap-8 items-start">
                <div className="space-y-6">
                  {/* 成員摺疊區塊 */}
                  <div className="bg-white rounded-3xl shadow-sm border overflow-hidden">
                    <div onClick={() => setIsParticipantsExpanded(!isParticipantsExpanded)} className="px-6 py-4 flex justify-between items-center cursor-pointer hover:bg-slate-50 transition-colors">
                      <div className="flex items-center gap-2">
                        <h3 className="text-xs font-black text-slate-400 tracking-widest uppercase">成員設定</h3>
                        <span className="bg-slate-100 text-[10px] font-black px-2 py-0.5 rounded-full">{participants.length}</span>
                      </div>
                      {isParticipantsExpanded ? <ChevronUp size={16} /> : <ChevronDown size={16} />}
                    </div>
                    {isParticipantsExpanded && (
                      <div className="p-6 pt-0 space-y-4">
                        <div className="flex flex-wrap gap-2">
                          {participants.map((p, idx) => (
                            <div key={idx} className="group relative">
                              <input value={p} onChange={(e) => { const newList = [...participants]; newList[idx] = e.target.value; updateParticipants(newList); }} className="bg-slate-50 px-4 py-2 rounded-xl text-xs font-bold border-none w-24 text-center" />
                              {participants.length > 2 && <button onClick={() => updateParticipants(participants.filter((_, i) => i !== idx))} className="absolute -top-1 -right-1 bg-red-400 text-white rounded-full p-0.5 opacity-0 group-hover:opacity-100 transition-opacity"><X size={10} /></button>}
                            </div>
                          ))}
                          <button onClick={() => updateParticipants([...participants, `成員${participants.length + 1}`])} className="px-4 py-2 border-2 border-dashed border-slate-200 rounded-xl text-slate-300 hover:text-slate-400 transition-colors"><UserPlus size={16} /></button>
                        </div>
                        <div className="pt-4 border-t flex justify-between items-center">
                           <div className="flex gap-2">
                             {colorPalettes.map(cp => (
                               <button key={cp.name} onClick={() => setThemeColor(cp)} className="w-5 h-5 rounded-full" style={{ backgroundColor: cp.primary }} />
                             ))}
                           </div>
                           <button onClick={() => setIsForeignMode(!isForeignMode)} className="text-[10px] font-black px-3 py-1.5 bg-slate-50 rounded-lg">{isForeignMode ? '關閉外幣' : '開啟外幣'}</button>
                        </div>
                      </div>
                    )}
                  </div>

                  {/* 輸入區塊 */}
                  <div className="bg-white p-8 rounded-[2.5rem] shadow-sm border space-y-6">
                    <div className="grid grid-cols-12 gap-3">
                      <input placeholder="品項 (例如: 晚餐)" value={quickInput.name} onChange={(e) => setQuickInput({...quickInput, name: e.target.value})} className="col-span-12 bg-slate-50 p-4 rounded-2xl text-sm font-bold border-none" />
                      <input type="number" placeholder="金額" value={quickInput.amount} onChange={(e) => setQuickInput({...quickInput, amount: e.target.value})} className="col-span-8 bg-slate-50 p-4 rounded-2xl text-sm font-bold border-none" />
                      <select value={quickInput.currency} onChange={(e) => setQuickInput({...quickInput, currency: e.target.value})} className="col-span-4 bg-slate-50 p-4 rounded-2xl text-xs font-black border-none"><option value="TWD">TWD</option><option value={currencyName}>{currencyName}</option></select>
                    </div>
                    <div className="space-y-3">
                       <p className="text-[10px] font-black text-slate-300 uppercase ml-1">誰付錢的？</p>
                       <div className="flex flex-wrap gap-2">
                         {participants.map(p => (
                           <button key={p} onClick={() => setQuickInput({...quickInput, payer: p})} className={`px-4 py-2 rounded-xl text-xs font-bold border-2 transition-all ${quickInput.payer === p ? 'text-white' : 'bg-white text-slate-400 border-slate-100'}`} style={quickInput.payer === p ? { backgroundColor: themeColor.primary, borderColor: themeColor.primary } : {}}>{p}</button>
                         ))}
                       </div>
                    </div>
                    <button onClick={handleQuickAdd} className="w-full text-white py-4 rounded-2xl font-black text-sm active:scale-95 shadow-lg transition-all" style={{ backgroundColor: '#40514E' }}>新增支出</button>
                  </div>

                  {items.length > 0 && (
                    <button onClick={handleSettlement} disabled={isSettling} className="w-full text-white font-black py-5 rounded-[2rem] shadow-xl flex items-center justify-center gap-3 active:scale-95" style={{ backgroundColor: themeColor.primary }}>
                      {isSettling ? <Loader2 className="animate-spin" /> : <CheckCircle2 size={24} />} 結算並產生收據
                    </button>
                  )}
                </div>

                {/* 摘要與清單 */}
                <div className="space-y-6">
                   <div className="bg-[#40514E] rounded-[2.5rem] shadow-2xl overflow-hidden text-white">
                      <div className="p-10">
                        <p className="text-[10px] font-black uppercase tracking-widest mb-2 opacity-60">總花費</p>
                        <h2 className="text-4xl font-black">${totalSpent.toLocaleString()}</h2>
                        <div className="mt-8 space-y-3">
                          {participants.map(p => (
                            <div key={p} className="flex justify-between items-center bg-white/5 p-4 rounded-xl text-sm">
                              <span className="font-bold opacity-80">{p}</span>
                              <span className="font-black" style={{ color: (balances[p]||0) >= 0 ? themeColor.primary : themeColor.secondary }}>
                                {(balances[p]||0) >= 0 ? '+' : '-'}${Math.abs(balances[p]||0).toLocaleString()}
                              </span>
                            </div>
                          ))}
                        </div>
                      </div>
                      <div className="bg-white p-8 rounded-t-[2.5rem] text-slate-600 max-h-[400px] overflow-y-auto">
                        <h4 className="text-[10px] font-black uppercase tracking-widest text-slate-300 mb-6">支出清單</h4>
                        <div className="space-y-5">
                          {items.map(item => (
                            <div key={item.id} className="flex justify-between items-center group">
                              <div className="flex items-center gap-3">
                                <div className="w-8 h-8 rounded-lg flex items-center justify-center font-black text-[10px]" style={{ backgroundColor: `${themeColor.primary}20`, color: themeColor.primary }}>{item.payer[0]}</div>
                                <span className="text-sm font-bold text-slate-700">{item.name}</span>
                              </div>
                              <div className="flex items-center gap-4">
                                 <span className="font-black text-sm">${item.amount.toLocaleString()}</span>
                                 <button onClick={() => deleteDoc(doc(db, 'projects', appId, 'users', user.uid, 'books', currentBookId, 'expenses', item.id))} className="text-slate-200 hover:text-red-400 transition-colors"><Trash2 size={16} /></button>
                              </div>
                            </div>
                          ))}
                        </div>
                      </div>
                   </div>
                </div>
              </div>
            ) : (
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                {settlements.map(s => (
                  <div key={s.id} onClick={() => { setLastSettlementData(s); setShowReceipt(true); }} className="bg-white p-8 rounded-[2rem] border hover:shadow-lg transition-all cursor-pointer">
                    <div className="flex justify-between items-start mb-4">
                       <p className="text-xs font-black text-slate-400">{new Date(s.settledAt).toLocaleDateString()}</p>
                       <p className="text-2xl font-black text-[#40514E]">${s.totalSpent.toLocaleString()}</p>
                    </div>
                    <p className="text-[10px] font-black uppercase tracking-widest text-slate-300">點擊查看收據</p>
                  </div>
                ))}
              </div>
            )}
          </main>
        </>
      )}
    </div>
  );
}
